{
  "name": "linkshort-url-shortener",
  "version": "1.0.0",
  "description": "A modern URL shortener built with the MERN stack",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "start": "cd backend && npm start",
    "build": "cd frontend && pnpm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && pnpm install"
  },
  "keywords": [
    "url-shortener",
    "mern-stack",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "analytics",
    "web-application"
  ],
  "author": "LinkShort Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linkshort/url-shortener.git"
  },
  "bugs": {
    "url": "https://github.com/linkshort/url-shortener/issues"
  },
  "homepage": "https://github.com/linkshort/url-shortener#readme"
}
